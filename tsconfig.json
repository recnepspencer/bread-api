{
  "compilerOptions": {
      "target": "es6",           // Set the JavaScript version output
      "module": "commonjs",      // CommonJS is standard for Node.js
      "outDir": "./dist",        // Redirect output structure to 'dist' folder
      "esModuleInterop": true,   // Enables import of modules like `import fs from 'fs'`
      "strict": true,            // Enables strict type-checking options
      "skipLibCheck": true       // Skip type checking of declaration files
  },
  "include": ["src/**/*"],       // Source files are here
  "exclude": ["node_modules"]    // Don't include node_modules
}